{
    "CFNLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {"Ref":"BootstrapBucket"},
          "S3Key":{"Fn::Join":["",[
            {"Ref":"BootstrapPrefix"},
            "/lambda/cfn.zip"
          ]]}
        },
        "Environment": {
          "Variables": {
            "REGION": {
              "Ref": "AWS::Region"
            }
          }
        },
        "Handler": "index.handler",
        "MemorySize": "128",
        "Role": {
          "Fn::GetAtt": [
            "Role",
            "Arn"
          ]
        },
        "Runtime": "nodejs6.10",
        "Timeout": 300
      }
    },
    "ReadPolicy":{
        "Type": "AWS::IAM::ManagedPolicy",
        "Properties": {
            "PolicyDocument":{
                "Version": "2012-10-17",
                "Statement": [{
                  "Effect": "Allow",
                  "Action": [
                    "es:*"
                  ],
                  "Resource": [{"Fn::Join":["/",[
                        {"Ref":"Arn"},
                        "*"
                    ]]}
                    ]
                }]
            },
            "Roles":[{"Ref":"Role"}]
        }
    },
    "Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Path": "/",
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ]
      }
    }
}

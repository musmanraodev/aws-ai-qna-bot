{
  "Resources": {
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {}
    },
    "ReadPolicy":{
    "Type" : "AWS::S3::BucketPolicy",
    "Properties" : {
        "Bucket" : {"Ref":"Bucket"},
        "PolicyDocument" : {
            "Version":"2012-10-17",
            "Statement":[{
                "Sid":"PublicReadForGetBucketObjects",
                "Effect":"Allow",
                "Principal": {"AWS":{"Ref":"AWS::AccountId"}},
                "Action":["s3:Get*","s3:List*"],
                "Resource":[
                    {"Fn::Join":["",[
                        "arn:aws:s3:::",
                        {"Ref":"Bucket"},
                        "/*"
                    ]]},
                    {"Fn::Join":["",[
                        "arn:aws:s3:::",
                        {"Ref":"Bucket"}
                    ]]}
                ]
            }]
        }
    }
    }
  },
  "Conditions": {},
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Bootstrap bucket for QnABot assets",
  "Mappings": {},
  "Outputs": {
    "Bucket": {
      "Value": {
        "Ref": "Bucket"
      },
      "Export":{
        "Name":"QNA-BOOTSTRAP-BUCKET"
      }
    },
    "Prefix": {
      "Value": "artifacts/aws-ai-qna-bot",
      "Export":{
        "Name":"QNA-BOOTSTRAP-PREFIX"
      }
    }
  },
  "Parameters": {}
}
